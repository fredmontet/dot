#!/usr/bin/env python3
import sys
from jam.cli import main

if __name__ == "__main__":
    sys.exit(main())
exit 0

# `jam` Handles installation, updates, etc.
#
# :param args: command parameters

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
jamDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
	echo "jam -- dotfiles management"
	echo ""
	echo "Usage: jam [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dot directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$jamDirectory"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

export JAM=$HOME/.jam

# Set OS defaults
$JAM/rel/os/reset.sh

# Install software
$JAM/run/install
